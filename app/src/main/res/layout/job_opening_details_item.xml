            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/objectivity_medium"
                android:text="@string/sms"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
