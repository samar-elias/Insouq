<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    tools:context=".Views.Main.Profile.MyFavourites.MyFavouritesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="@dimen/_20sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:background="@drawable/gradient_background">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/my_favorites"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/objectivity_medium"
            android:textSize="@dimen/_15ssp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">
            <HorizontalScrollView
                android:id="@+id/my_ads_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_15sdp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/motors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/motors_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/motors_01"/>
                        <ImageView
                            android:id="@+id/motors_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/motors_background"
                            app:layout_constraintStart_toStartOf="@id/motors_background"
                            app:layout_constraintEnd_toEndOf="@id/motors_background"
                            app:layout_constraintBottom_toBottomOf="@id/motors_background"
                            android:src="@drawable/motors_pink"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/motors_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/motors"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/motor_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/motors"
                            app:layout_constraintEnd_toEndOf="@id/motors"
                            android:background="@drawable/foshia_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/property"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/property_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/properties_01"/>
                        <ImageView
                            android:id="@+id/property_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/property_background"
                            app:layout_constraintStart_toStartOf="@id/property_background"
                            app:layout_constraintEnd_toEndOf="@id/property_background"
                            app:layout_constraintBottom_toBottomOf="@id/property_background"
                            android:src="@drawable/property_orange"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/property_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/property"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/property_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/property"
                            app:layout_constraintEnd_toEndOf="@id/property"
                            android:background="@drawable/orange_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/jobs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/jobs_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/jobs_01"/>
                        <ImageView
                            android:id="@+id/jobs_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/jobs_background"
                            app:layout_constraintStart_toStartOf="@id/jobs_background"
                            app:layout_constraintEnd_toEndOf="@id/jobs_background"
                            app:layout_constraintBottom_toBottomOf="@id/jobs_background"
                            android:src="@drawable/jobs_peach"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/jobs_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/jobs"
                            android:textSize="@dimen/_11ssp"
                            android:gravity="center"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/job_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/jobs"
                            app:layout_constraintEnd_toEndOf="@id/jobs"
                            android:background="@drawable/peach_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/services_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/services_01"/>
                        <ImageView
                            android:id="@+id/services_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/services_background"
                            app:layout_constraintStart_toStartOf="@id/services_background"
                            app:layout_constraintEnd_toEndOf="@id/services_background"
                            app:layout_constraintBottom_toBottomOf="@id/services_background"
                            android:src="@drawable/services_fairouz"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/services_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/services"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/services_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/services"
                            app:layout_constraintEnd_toEndOf="@id/services"
                            android:background="@drawable/fairouz_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/business_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/business_01"/>
                        <ImageView
                            android:id="@+id/business_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/business_background"
                            app:layout_constraintStart_toStartOf="@id/business_background"
                            app:layout_constraintEnd_toEndOf="@id/business_background"
                            app:layout_constraintBottom_toBottomOf="@id/business_background"
                            android:src="@drawable/business_green"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/business_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/business"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/business_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/business"
                            app:layout_constraintEnd_toEndOf="@id/business"
                            android:background="@drawable/green_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/classifieds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/classifieds_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/classifieds_01"/>
                        <ImageView
                            android:id="@+id/classifieds_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/classifieds_background"
                            app:layout_constraintStart_toStartOf="@id/classifieds_background"
                            app:layout_constraintEnd_toEndOf="@id/classifieds_background"
                            app:layout_constraintBottom_toBottomOf="@id/classifieds_background"
                            android:src="@drawable/classifieds_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/classifieds_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/classifieds"
                            android:textSize="@dimen/_11ssp"
                            android:gravity="center"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/classifieds_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/classifieds"
                            app:layout_constraintEnd_toEndOf="@id/classifieds"
                            android:background="@drawable/blue_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/numbers_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/numbers_01"/>
                        <ImageView
                            android:id="@+id/numbers_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/numbers_background"
                            app:layout_constraintStart_toStartOf="@id/numbers_background"
                            app:layout_constraintEnd_toEndOf="@id/numbers_background"
                            app:layout_constraintBottom_toBottomOf="@id/numbers_background"
                            android:src="@drawable/numbers_purple"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/numbers_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/numbers"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/numbers_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/numbers"
                            app:layout_constraintEnd_toEndOf="@id/numbers"
                            android:background="@drawable/purp_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/electronics_background"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/electronics_01"/>
                        <ImageView
                            android:id="@+id/electronics_icon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/electronics_background"
                            app:layout_constraintStart_toStartOf="@id/electronics_background"
                            app:layout_constraintEnd_toEndOf="@id/electronics_background"
                            app:layout_constraintBottom_toBottomOf="@id/electronics_background"
                            android:src="@drawable/mobile_yellow"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/electronics_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/electronics"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/purple_text"
                            android:fontFamily="@font/objectivity_bold"/>
                        <TextView
                            android:id="@+id/electronics_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@id/electronics"
                            app:layout_constraintEnd_toEndOf="@id/electronics"
                            android:background="@drawable/yellow_circle"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/objectivity_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_favs_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/my_ads_categories"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp" />
            <TextView
                android:id="@+id/no_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/my_ads_categories"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/objectivity_medium"
                android:layout_marginTop="@dimen/_100sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:visibility="gone"
                android:text="@string/no_ads"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile_purple"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>