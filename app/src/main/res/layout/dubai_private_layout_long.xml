<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dubai_private_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/plate_image"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:maxLength="5"
        android:src="@drawable/dubai_private_long"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/dp_plate_code_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/plate_image"
        app:layout_constraintLeft_toLeftOf="@id/plate_image"
        android:text="A"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_30ssp"
        android:fontFamily="@font/bebas"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dp_plate_number_long"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/plate_image"
        app:layout_constraintStart_toStartOf="@id/plate_image"
        app:layout_constraintEnd_toEndOf="@id/plate_image"
        app:layout_constraintTop_toTopOf="@id/plate_image"
        android:text="00000"
        android:maxLength="5"
        android:gravity="center"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:textSize="@dimen/_40ssp"
        android:fontFamily="@font/bebas"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>