<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Main.Profile.Advertising.AdvertisingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/gradient_background"
        android:padding="@dimen/_20sdp">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:id="@+id/support_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/advertising"
            android:fontFamily="@font/objectivity_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/have_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/advertise_with_us"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/objectivity_medium" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/on_insouq"
                    android:textColor="@color/purple_text"
                    android:textSize="@dimen/_17ssp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/objectivity_medium" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/noticed"
                    android:textColor="@color/light_purple_text"
                    android:textSize="@dimen/_17ssp"
                    android:visibility="gone"
                    android:fontFamily="@font/objectivity_medium" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/first_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_13ssp"
                android:hint="@string/first_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/last_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:textAlignment="viewStart"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:hint="@string/last_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/email_address_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_13ssp"
                android:hint="@string/email_address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/phone_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:inputType="phone"
                android:textAlignment="viewStart"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_13ssp"
                android:hint="@string/phone_number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/company"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/company_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_13ssp"
                android:hint="@string/company"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <EditText
                android:id="@+id/description_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:textColorHint="@color/base_orange"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:inputType="text"
                android:background="@drawable/white_radius_3"
                android:imeOptions="actionDone"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_5sdp"
                android:gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="@string/description"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advertising_budget"
                android:textAllCaps="true"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>
            <Spinner
                android:id="@+id/advertising_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/_15sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/base_orange"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:fontFamily="@font/objectivity_medium"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_35sdp"
                android:paddingEnd="@dimen/_35sdp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_purple_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile_purple"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>