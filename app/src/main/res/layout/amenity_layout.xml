<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:background="@drawable/gray_border_raduis_10">

    <ImageView
        android:id="@+id/amenity_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/amenity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/amenity_image"
        app:layout_constraintStart_toStartOf="@+id/amenity_image"
        app:layout_constraintEnd_toEndOf="@id/amenity_image"
        android:fontFamily="@font/objectivity_medium"
        android:textColor="@color/purple_text"
        android:textSize="@dimen/_8ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Swimming pool"/>

</androidx.constraintlayout.widget.ConstraintLayout>