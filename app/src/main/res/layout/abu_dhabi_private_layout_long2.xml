<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/abu_dhabi_private_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plate_image"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:maxLength="5"
        android:src="@drawable/abu_dhabi_bike_long"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/adb_plate_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/plate_image"
        app:layout_constraintLeft_toLeftOf="@id/plate_image"
        android:text="1"
        android:layout_margin="@dimen/_3sdp"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/ginummernschild"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/adb_plate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:fontFamily="@font/ginummernschild"
        android:gravity="center"
        android:text="00000"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/plate_image"
        app:layout_constraintRight_toRightOf="@id/plate_image"
        app:layout_constraintStart_toStartOf="@id/plate_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>