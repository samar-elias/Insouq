<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/abu_dhabi_classic_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/plate_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/abu_dhabi_classic"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/adc_plate_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/plate_image"
        app:layout_constraintLeft_toLeftOf="@id/plate_image"
        android:text="1"
        android:layout_margin="@dimen/_5sdp"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/ginummernschild"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/adc_plate_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/plate_image"
        app:layout_constraintStart_toStartOf="@id/plate_image"
        app:layout_constraintEnd_toEndOf="@id/plate_image"
        android:text="00000"
        android:maxLength="5"
        android:gravity="center"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:textSize="@dimen/_25ssp"
        android:fontFamily="@font/ginummernschild"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>