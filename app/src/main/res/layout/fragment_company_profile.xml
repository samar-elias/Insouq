<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    tools:context=".Views.Main.Profile.MyJobs.CompanyProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_motor_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_gray_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Company Profile"
            android:textColor="@color/purple_text"
            android:fontFamily="@font/objectivity_medium"
            android:textSize="@dimen/_13ssp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_motor_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout"
        android:background="@color/off_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's know you better!"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_17ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell us more about your company"
                android:textColor="@color/purple_text"
                android:alpha="0.5"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/white_radius_10"
                android:padding="@dimen/_15sdp">
                <ImageView
                    android:id="@+id/add_cv"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/add_cv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload logo"
                    android:textAllCaps="true"
                    android:textColor="@color/purple_text"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_15sdp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a short description"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:background="@drawable/white_radius_10"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, \n\nContrary to popular belief, Lorem Ipsum is not simply random text."
                android:textColor="@color/purple_text"
                android:textColorHint="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trade License Number"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="00000000000"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trade License Copy"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_your_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_15sdp"
                android:background="@drawable/white_radius_10">
                <ImageView
                    android:id="@+id/add_files"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/add_cv"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/add_files"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/add_files"
                    app:layout_constraintStart_toEndOf="@id/add_files"
                    android:text="Attach files"
                    android:textAllCaps="true"
                    android:fontFamily="@font/objectivity_medium"
                    android:textColor="@color/purple_text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_11ssp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First and last name"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Phone Number"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="000000000"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@example.com"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address will be used for receiving applications"
                android:textColor="@color/purple_text"
                android:alpha="0.5"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="what is  your Company Size?"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <Spinner
                android:id="@+id/company_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="what is the Company Industry?"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <Spinner
                android:id="@+id/company_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Location"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Arabian Ranches, Dubai"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/location_arrow"
                android:drawableRight="@drawable/location_arrow"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Website"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="www.example.com"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Profile Status"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Profile Status"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/gray"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/_15sdp"
                android:backgroundTint="@color/base_orange"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Update Profile"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile_purple"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>