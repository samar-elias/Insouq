<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/abu_dhabi_private_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plate_image"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:scaleType="fitXY"
        android:src="@drawable/abu_dhabi_bike_long"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adp_plate_code_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/plate_image"
        app:layout_constraintLeft_toLeftOf="@id/plate_image"
        android:text="1"
        android:layout_margin="@dimen/_7sdp"
        android:textSize="@dimen/_30ssp"
        android:fontFamily="@font/ginummernschild"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/adp_plate_number_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:fontFamily="@font/ginummernschild"
        android:gravity="center"
        android:maxLength="5"
        android:text="0000000"
        android:textColor="@color/black"
        android:textSize="@dimen/_40ssp"
        app:layout_constraintBottom_toBottomOf="@id/plate_image"
        app:layout_constraintRight_toRightOf="@id/plate_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/plate_image"
        app:layout_constraintTop_toTopOf="@id/plate_image" />

</androidx.constraintlayout.widget.ConstraintLayout>