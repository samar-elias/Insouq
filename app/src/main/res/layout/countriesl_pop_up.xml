<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_40sdp"
    android:layout_marginEnd="@dimen/_40sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_15sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/objectivity_medium"
            android:text="@string/choose_country"
            android:textColor="@color/purple_text"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_close_gray_24"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <RadioButton
                android:id="@+id/uae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_purple_text"
                android:checked="false"
                android:fontFamily="@font/objectivity_medium"
                android:text="Insouq UAE"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_8ssp" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="@id/uae"
                app:layout_constraintEnd_toEndOf="@id/uae"
                app:layout_constraintBottom_toBottomOf="@id/uae"
                android:src="@drawable/uae"/>

            <RadioButton
                android:id="@+id/jordan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/uae"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_purple_text"
                android:checked="false"
                android:textAlignment="viewStart"
                android:fontFamily="@font/objectivity_medium"
                android:text="Insouq Jordan Soon"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_8ssp" />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="@id/jordan"
                app:layout_constraintEnd_toEndOf="@id/jordan"
                app:layout_constraintBottom_toBottomOf="@id/jordan"
                android:src="@drawable/jordan"/>

            <RadioButton
                android:id="@+id/iraq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jordan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_purple_text"
                android:checked="false"
                android:fontFamily="@font/objectivity_medium"
                android:text="Insouq Suadi Arabia Soon"
                android:textAllCaps="true"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_8ssp" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="@id/iraq"
                app:layout_constraintEnd_toEndOf="@id/iraq"
                app:layout_constraintBottom_toBottomOf="@id/iraq"
                android:src="@drawable/ksa"/>

            <RadioButton
                android:id="@+id/kuwait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iraq"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_purple_text"
                android:checked="false"
                android:fontFamily="@font/objectivity_medium"
                android:text="Kuwait"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/kuwait"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:cornerRadius="@dimen/_15sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>