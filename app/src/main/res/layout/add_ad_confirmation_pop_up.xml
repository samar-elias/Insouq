<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:background="@color/white"
    android:layout_marginStart="@dimen/_40sdp"
    android:layout_marginEnd="@dimen/_40sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:background="@color/white">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Edit Ad Confirmation"
            android:fontFamily="@font/objectivity_medium"
            android:textColor="@color/purple_text"
            android:textSize="@dimen/_14ssp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="our ad is under review, we will notify you when the ad is active"
            android:fontFamily="@font/objectivity_medium"
            android:gravity="center"
            android:textColor="@color/purple_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad_title"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad_title"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category "
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Category "
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Reference"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Reference"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Name"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Name"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Price"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Price"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAT"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5% VAT"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid"
                android:textColor="@color/purple_text"
                android:alpha="0.3"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid"
                android:textColor="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="@color/base_orange"
                android:text="Continue"
                android:textColor="@color/white"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>