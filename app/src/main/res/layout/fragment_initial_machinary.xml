<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    tools:context=".Views.Main.SellingItems.Motors.Machinary.InitialMachinaryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_gray_24"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell_an_item"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motors"
                android:textColor="@color/gray"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/let_s_start_with_the_title"
                    android:textColor="@color/purple_text"
                    android:fontFamily="@font/objectivity_bold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_15sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/try_to_have_an_informative_title_that_s_to_be_point_and_not_very_long"
                    android:textColor="@color/purple_text"
                    android:alpha="0.5"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/motor_title_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ad_title"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:background="@drawable/white_radius_3"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_13sdp"
                    android:textColor="@color/purple_text"
                    android:textColorHint="@color/gray"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_11ssp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_40_characters"
                    android:textColor="@color/purple_text"
                    android:alpha="0.5"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/now_let_s_add_your_car_make_and_model"
                    android:textColor="@color/purple_text"
                    android:fontFamily="@font/objectivity_bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_radius_3"
                    android:layout_marginTop="@dimen/_12sdp">
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/brand_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <EditText
                    android:id="@+id/other_brand_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_radius_3"
                    android:visibility="gone"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:hint="@string/other_please_type_here"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/purple_text"
                    android:padding="@dimen/_13sdp" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_radius_3"
                    android:layout_marginTop="@dimen/_12sdp">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/model_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <EditText
                    android:id="@+id/other_model_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:hint="@string/other_please_type_here"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/purple_text"
                    android:padding="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/years_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:inputType="number"
                    android:maxLength="4"
                    android:background="@drawable/white_radius_3"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:padding="@dimen/_13sdp"
                    android:textColor="@color/purple_text"
                    android:textColorHint="@color/gray"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_11ssp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@color/base_orange"
                    android:text="@string/continue_"
                    android:textColor="@color/white"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toTopOf="@id/motors_ad_layout"
        android:text="@string/here_s_how_your_ad_will_look"
        android:textColor="@color/purple_text"
        android:visibility="visible"
        android:alpha="0.5"
        android:fontFamily="@font/objectivity_medium"/>

    <include
        android:id="@+id/motors_ad_layout"
        layout="@layout/post_motor_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout"/>

    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/motors_ad_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>