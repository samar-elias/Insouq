<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Main.Profile.ContactUs.ContactUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/gradient_background"
        android:padding="@dimen/_20sdp">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:id="@+id/support_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/contact_us"
            android:fontFamily="@font/objectivity_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">
            <TextView
                android:id="@+id/have_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/contact_with_us"
                android:textColor="@color/purple_text"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/objectivity_medium" />
            <LinearLayout
                android:id="@+id/have_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/have_questions"
                app:layout_constraintStart_toStartOf="@id/have_questions"
                app:layout_constraintEnd_toEndOf="@id/have_questions"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/and_we_will"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/purple_text"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help_you"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_17ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/have_answers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_25sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/have_answers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Reason of the inquiry"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/purple_text"/>

                <Spinner
                    android:id="@+id/reasons_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/have_answers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/name"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_12ssp"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/purple_text"/>
                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    android:textAlignment="viewStart"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/base_orange"
                    android:textColorHint="@color/base_orange"
                    android:fontFamily="@font/objectivity_regular"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/have_answers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/email_address"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_12ssp"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/purple_text"/>
                <EditText
                    android:id="@+id/email_address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="example@example.com"
                    android:textAlignment="viewStart"
                    android:textColor="@color/base_orange"
                    android:textColorHint="@color/base_orange"
                    android:fontFamily="@font/objectivity_regular"
                    android:textSize="@dimen/_15ssp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="@dimen/_5sdp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/have_answers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/description"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/purple_text"/>
                <EditText
                    android:id="@+id/description_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:hint="@string/describe_your_problem"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColor="@color/base_orange"
                    android:fontFamily="@font/objectivity_regular"
                    android:textColorHint="@color/base_orange"
                    android:textSize="@dimen/_15ssp"
                    android:background="@drawable/white_radius_3"
                    android:padding="@dimen/_5sdp"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/_5sdp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/add_your_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/white_radius_10">
                    <ImageView
                        android:id="@+id/add_cv"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/add_cv"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/add_cv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/add_cv"
                        app:layout_constraintStart_toEndOf="@id/add_cv"
                        android:text="@string/attachments"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:fontFamily="@font/objectivity_medium"
                        android:textColor="@color/purple_text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cornerRadius="@dimen/_15sdp"
                    android:backgroundTint="@color/base_orange"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:fontFamily="@font/objectivity_medium"
                    android:textSize="@dimen/_11ssp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_purple_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile_purple"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>