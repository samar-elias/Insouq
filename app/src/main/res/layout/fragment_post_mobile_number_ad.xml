<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    tools:context=".Views.Main.SellingItems.Numbers.PostMobileNumberAdFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_gray_24"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell_an_item"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_13ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numbers"
                android:textColor="@color/gray"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ad_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/let_s_start_with_the_title"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/try_to_have_an_informative_title_that_s_to_be_point_and_not_very_long"
                android:textColor="@color/purple_text"
                android:alpha="0.5"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <EditText
                android:id="@+id/mob_number_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ad_title"
                android:textAllCaps="true"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_13sdp"
                android:background="@drawable/white_radius_3"
                android:textColor="@color/purple_text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_11ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommended_40_characters"
                android:textColor="@color/purple_text"
                android:alpha="0.5"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/looks_good_now_please_add_more_details"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listing_price"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:id="@+id/ad_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="00.000"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_13sdp"
                android:background="@drawable/white_radius_3"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_11ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_13sdp"
                android:hint="@string/phone_number"
                android:background="@drawable/white_radius_3"
                android:textColor="@color/purple_text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_11ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_a_short_description"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <EditText
                android:id="@+id/ad_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:hint="@string/write_more_about_your_ad"
                android:background="@drawable/white_radius_10"
                android:textColor="@color/purple_text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specifications"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_radius_3"
                android:layout_marginTop="@dimen/_12sdp">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/operators_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_radius_3"
                android:layout_marginTop="@dimen/_12sdp">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/codes_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <EditText
                android:id="@+id/number_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0000000"
                android:maxLength="7"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:padding="@dimen/_13sdp"
                android:background="@drawable/white_radius_3"
                android:textColor="@color/purple_text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/objectivity_regular"
                android:textSize="@dimen/_11ssp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_radius_3"
                android:layout_marginTop="@dimen/_12sdp">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/number_plan_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_radius_3"
                android:layout_marginTop="@dimen/_12sdp">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/locations_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_location"
                android:textAllCaps="true"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:padding="@dimen/_5sdp"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/location_arrow"
                android:drawableRight="@drawable/location_arrow"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/base_orange"
                android:textColorHint="@color/base_orange"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:backgroundTint="@color/gray"/>
            <CheckBox
                android:id="@+id/agreement_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/agreement_ad"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/submit_ad"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="@color/base_orange"
                android:text="@string/continue_btn"
                android:textColor="@color/white"
                android:fontFamily="@font/objectivity_medium"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mobile_numbers_ad_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/here_s_how_your_ad_will_look"
        android:fontFamily="@font/objectivity_regular"
        android:textColor="@color/purple_text"
        android:textSize="@dimen/_11ssp"/>

    <include
        android:id="@+id/mobile_numbers_ad_layout"
        layout="@layout/mobile_numbers_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/ad_title"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_layout"/>

    <LinearLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mobile_numbers_ad_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/sell_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_24"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/notification_gray" />
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/profile"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>