<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:background="@color/purple"
    android:layout_marginStart="@dimen/_40sdp"
    android:layout_marginEnd="@dimen/_40sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:background="@color/light_purple_text"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/continue_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_20_white"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/google_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_with_google"
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="true"
                android:textColor="@color/light_purple_text"
                android:fontFamily="@font/objectivity_medium"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">
            <LinearLayout
                android:id="@+id/continue_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"

                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/facebook_logo_icon" />

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/objectivity_medium"
                    android:text="@string/continue_with_facebook"
                    android:textAllCaps="true"
                    android:textColor="@color/light_purple_text"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/objectivity_medium"
                android:background="@drawable/rounded_20_white"
                android:textColor="@color/light_purple_text"
                android:drawableTint="@color/light_purple_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continue_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/base_orange"
            app:cornerRadius="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/continue_with_email"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/objectivity_medium"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>